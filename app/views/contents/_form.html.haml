= form_for @content, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :code_name, :class => 'control-label'
    .controls
      = f.text_field :code_name, :class => 'text_field'
  .control-group
    = f.label :page_content, :class => 'control-label'
    .controls
      = f.text_area :page_content, :class => 'text_area row-fluid'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), contents_path, :class => 'btn'
